<?xml version="1.0" encoding="utf-8"?>
<org.company.iendo.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeMenuLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_60"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:text="修改密码"
                android:textColor="@color/black70"
                android:textSize="@dimen/padding_15" />

            <TextView
                android:id="@+id/tv_item_creator_data"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_item_change"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:lines="1"
                android:paddingRight="@dimen/padding_10"
                android:text="2020/11/27/ 16:06:08"
                android:textColor="@color/black70"
                android:textSize="@dimen/padding_10" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_10"
                android:gravity="center"
                android:lines="1"
                android:text="01"
                android:textColor="@color/black80"
                android:textSize="@dimen/padding_14" />


            <TextView
                android:id="@+id/tv_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_toRightOf="@+id/tv_id"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="QQ"
                android:textColor="@color/black80"
                android:textSize="@dimen/padding_14" />

            <TextView
                android:id="@+id/tv_item_dec"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_item_user_name"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_toRightOf="@+id/tv_id"
                android:gravity="center"
                android:lines="1"
                android:text="超级用户"
                android:textColor="@color/black70"
                android:textSize="@dimen/padding_10" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/cancleBtn"
        android:layout_width="@dimen/padding_80"
        android:layout_height="match_parent"
        android:background="@color/white50"
        android:text="取消"
        android:textColor="@color/color_50b3ff"
        android:textSize="@dimen/padding_15"
        android:visibility="gone" />

    <Button
        android:id="@+id/user_search_delBtn"
        android:layout_width="@dimen/padding_80"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/padding_15" />

</org.company.iendo.widget.SwipeMenuLayout>