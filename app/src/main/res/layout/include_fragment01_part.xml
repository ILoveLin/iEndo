<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <!--病例号-->
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="病例号:"
            android:textColor="@color/color_333333" />

        <TextView
            android:id="@+id/case01_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </LinearLayout>
    <!--姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="姓名:"
            android:textColor="@color/color_333333" />


        <TextView
            android:id="@+id/case01_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </LinearLayout>

    <!--性别-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="性别:"
            android:textColor="@color/color_333333" />


        <TextView
            android:id="@+id/case01_sex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </LinearLayout>
    <!--年龄-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="年龄:"
            android:textColor="@color/color_333333" />


        <TextView
            android:id="@+id/case01_age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/white"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </LinearLayout>
    <!--职业-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="职业:"
            android:textColor="@color/color_333333" />


        <TextView
            android:id="@+id/case01_profession"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/white"

            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </LinearLayout>
    <!--电话-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="电话:"
            android:textColor="@color/color_333333" />


        <TextView
            android:id="@+id/case01_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/white"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </LinearLayout>
    <!--住址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="住址:"
            android:textColor="@color/color_333333" />


        <TextView
            android:id="@+id/case01_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/white"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_6"
            android:paddingRight="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_6"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </LinearLayout>
    <!--病史-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="病史:"
            android:textColor="@color/color_333333" />


        <TextView
            android:id="@+id/case01_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/white"
            android:gravity="center_vertical|center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingTop="@dimen/padding_6"
            android:paddingRight="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_6"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>